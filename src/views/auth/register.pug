extends ../layout

block content
  .row.justify-content-center
    .col-md-6
      .card.border-primary.shadow
        .card-header.bg-primary.text-white
          h4.mb-0 Registro - ZeroCert ICP-Brasil
        .card-body
          form(action='/register', method='POST')
            .mb-3
              label.form-label(for='username') Nome de Usuário
              input#username.form-control(type='text', name='username', value=username || '', required)
            
            .mb-3
              label.form-label(for='fullName') Nome Completo
              input#fullName.form-control(type='text', name='fullName', value=fullName || '', required)
            
            .mb-3
              label.form-label(for='email') E-mail
              input#email.form-control(type='email', name='email', value=email || '', required)
            
            .mb-3
              label.form-label(for='password') Senha
              input#password.form-control(type='password', name='password', required)
            
            .mb-3
              label.form-label(for='confirmPassword') Confirmar Senha
              input#confirmPassword.form-control(type='password', name='confirmPassword', required)
            
            .d-grid.gap-2
              button.btn.btn-primary(type='submit') Registrar
          
          hr
          
          .text-center
            p Já tem uma conta?
            a.btn.btn-outline-secondary(href='/login') Fazer Login