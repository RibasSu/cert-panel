extends ../layout

block content
  .row.justify-content-center
    .col-md-6
      .card.border-primary.shadow
        .card-header.bg-primary.text-white
          h4.mb-0 Login - ZeroCert ICP-Brasil
        .card-body
          form(action='/login', method='POST')
            .mb-3
              label.form-label(for='username') Nome de Usuário
              input#username.form-control(type='text', name='username', value=username || '', required)
            
            .mb-3
              label.form-label(for='password') Senha
              input#password.form-control(type='password', name='password', required)
            
            .d-grid.gap-2
              button.btn.btn-primary(type='submit') Entrar
          
          hr
          
          .text-center
            p Não tem uma conta?
            a.btn.btn-outline-secondary(href='/register') Criar Conta